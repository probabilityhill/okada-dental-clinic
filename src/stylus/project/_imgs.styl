.img1
  margin 2rem 0 4rem
  & p
    text-align center

.imgs2
  display grid
  grid-gap 2rem
  grid-template-columns 1fr 1fr
  &__item
    & p
      text-align center

.imgs3
  display grid
  grid-gap 2rem
  grid-template-columns 1fr 1fr 1fr
  &__item
    & p
      text-align center

.imgDesc
  margin 1rem 0
  &__img
    display block
    margin 1rem auto
    width 40%

+ls()
  .img1
    width 70%
  .imgs2
    width 70%
  .imgs3
    width 90%
  .imgDesc
    display grid
    grid-gap 2rem
    grid-template-columns 1fr 3fr
    &__img
      margin 1rem 0
      width 100%
