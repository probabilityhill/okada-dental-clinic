extends _layout

block vars
  include _config
  - var key = "top"
  - var page = pages[key]

block contents
  // トップ画像
  div.atf
    div.atf__imgs
      figure
        img(src=imgPath+"/top/hero-1.jpg" alt="治療の様子｜大阪・東大阪市長堂布施駅前のおかだ歯科クリニック")
      figure
        img(src=imgPath+"/top/hero-2.jpg" alt="待合室｜大阪・東大阪市長堂布施駅前のおかだ歯科クリニック")
      figure
        img(src=imgPath+"/top/hero-3.jpg" alt="カウンセリングの様子｜大阪・東大阪市長堂布施駅前のおかだ歯科クリニック")
    p.atf__msg
      span
        | 私たちは地域の皆様の「ホームドクター」として<br>
        | 信頼されるよう治療に取り組んでいます

  // クリニック情報
  section.info
    +clinicInfo("info")
    +officeHours("info")

  // お知らせ
  section.news
    h2.ttl--1 お知らせ&emsp;
      span NEWS
    ul.news__item
      li.c--red 年末年始の休診日のお知らせ（2025/11/01）
        p 12月28日(日)～1月4日(日)は休診します。<br>1月5日(月)より平常通り診療します。
      li マスクの着用について（2023/03/13）
        p 当院では引き続きマスクの着用をお願いいたします。
      li インターネット予約を開始しました。（2021/12/02）
        p メニューの「
          a(href=pages.reservation.url) 診療予約
          | 」から予約できます。
      li
        a(href=pages.covid19.url) 新型コロナウイルスの感染拡大防止について
        | （2020/06/03更新）
        p  ※ご予約なしの突然の来院はご遠慮ください。
    h3.ttl--2
      span ■&ensp;休診日&ensp;（2025/2026）
    p.news__color
      span.closed &emsp;&emsp;
      | &thinsp;休診日
    div.news__cal
      +calendar(12, 31, 1, [], [29,30,31])
      +calendar(1, 31, 4, [1, 12], [2, 3])

block script
  script(src=jsPath+"/carousel.js")
  script(type="application/ld+json").
    {
      "@context": "https://schema.org",
      "@type": "Dentist",
      "description": "#{pages["top"].description}",
      "image": {
        "@type": "ImageObject",
        "url": "#{domain+pages["top"].image}"
      },
      "name": "#{siteName}",
      "alternateName": "#{siteNameEng}",
      "url": "#{domain}",
      "logo": "#{domain+imgPath}/logo.png",
      "currenciesAccepted": "JPY",
      "telephone": "#{tel}",
      // 営業時間
      "openingHoursSpecification":[
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek":[
            "Monday",
            "Tuesday",
            "Wednesday",
            "Friday",
            "Saturday"
          ],
          "opens": "10:00",
          "closes": "13:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek":[
            "Monday",
            "Tuesday",
            "Wednesday",
            "Friday"
          ],
          "opens": "14:30",
          "closes": "20:00"
        },
        {
          "@type":"OpeningHoursSpecification",
          "dayOfWeek":"Saturday",
          "opens": "14:30",
          "closes": "17:00"
        }
      ],
      // 住所
      "address": {
        "@type": "PostalAddress",
        "streetAddress":"#{streetAddress}",
        "addressLocality":"#{addressLocality}",
        "addressRegion":"#{addressRegion}",
        "postalCode":"#{postalCode}",
        "addressCountry":"JP"
      },
      // 位置情報
      "geo": {
        "@type":"GeoCoordinates",
        "latitude":"34.66456",
        "longitude":"135.562453"
      }
    }
  script(type="application/ld+json").
    {
      "@context":"https://schema.org",
      "@type":"BreadcrumbList",
      "itemListElement":{
        "@type":"ListItem",
        "position":1,
        "name":"#{pages["top"].name}",
        "item":"#{domain+pages["top"].canonicalUrl}"
      }
    }
